const DifficultyTable = [
	0,
	100,
	376,
	1132,
	3224,
	9178,
	26756
]; 


function CalculateTargetDifficulty(wave) {
	return 15 * (wave^2) + (1500*wave);
}

function CalculateTierSpawnCountDifficulty(wave, tier) {
	const waveTargetDifficulty = CalculateTargetDifficulty(wave);

	var tierMultiplier;
	if (tier > 1) { tierMultiplier = 95 - (tier * 10);}
	else { tierMultiplier = 1; }

	var tierDifficulty = DifficultyTable[tier];
	var tierSpawnCount = ((waveTargetDifficulty * tierMultiplier) / 100) / tierDifficulty;
	var tierTargetDifficulty = waveTargetDifficulty - (tierSpawnCount * tierDifficulty);
	return tierSpawnCount, tierTargetDifficulty;
}

